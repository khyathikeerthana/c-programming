#include <stdio.h>

int main() {
   int decimalNum, binaryNum = 0, i = 1;

   printf("Enter a decimal number: ");
   scanf("%d", &decimalNum);

   while (decimalNum != 0) {
      binaryNum += (decimalNum % 2) * i;
      decimalNum /= 2;
      i *= 10;
   }

   printf("Binary number: %d", binaryNum);

   return 0;
}
