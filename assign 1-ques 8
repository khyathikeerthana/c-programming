#include <stdio.h>

int main() {
    int num, digit, sum = 0;
    printf("Enter any number: ");
    scanf("%d", &num);

    // loop through each digit of the number
    for(; num > 0; num /= 10) {
        digit = num % 10;
        sum += digit;
    }

    printf("Sum of digits: %d", sum);
    return 0;
}
