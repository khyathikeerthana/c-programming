#include <stdio.h>

int main() {
    int num, reversed_num = 0, remainder;

    printf("Enter a number: ");
    scanf("%d", &num);

    // Reversing the number using a for loop
    for (int i = num; i != 0; i /= 10) {
        remainder = i % 10;
        reversed_num = reversed_num * 10 + remainder;
    }

    printf("Reverse of %d = %d", num, reversed_num);

    return 0;
}
